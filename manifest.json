{
  "name": "Steem Keychain",
  "version": "1.6",
  "description": "Secure Steem Wallet Extension.",
  "permissions": [
    "activeTab", "declarativeContent", "storage", "webNavigation", "tabs",
    "https://*/*", "notifications", "idle", "contextMenus"
  ],
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": "images/keychain_icon_small.png"
  },
  "icons": {
    "16": "images/keychain_icon_small.png",
    "32": "images/keychain_icon_small.png"
  },
  "background": {
    "scripts": [
      "vendor/crypto-js.js",
      "vendor/md5.min.js",
      "js/encrypt.js",
      "vendor/steem.min.js",
      "vendor/decode.min.js",
      "js/config.js",
      "js/keychainify.js",
      "js/hf21.js",
      "js/rpcs.js",
      "js/background/init.js",
      "js/background/autolock.js",
      "js/background/dialog_lifecycle.js",
      "js/background/errors.js",
      "js/background/keychainify.js",
      "js/background/auth.js",
      "js/background/transactions.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": ["/images/logo.png", "js/steem_keychain.js"],
  "content_scripts": [{
    "matches": ["https://*/*", "http://0.0.0.0:1337/*", "http://*/*"],
    "js": ["vendor/jquery.min.js", "js/web_interface.js", "js/keychainify.js", "js/keychainify_content.js"]
  }],
  "manifest_version": 2
}